{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "_id": {
      "$ref": "#/definitions/objectId"
    },
    "attributes": {
      "type": "object"
    },
    "created_at": {
      "$ref": "#/definitions/isoDate"
    },
    "updated_at": {
      "$ref": "#/definitions/isoDate"
    },
    "datapoints_config": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "begins_at": {
            "$ref": "#/definitions/isoDate"
          },
          "ends_before": {
            "$ref": "#/definitions/isoDate"
          },
          "params": {
            "type": "object"
          },
          "path": {
            "type": "string"
          }
        },
        "required": ["params", "path"],
        "additionalProperties": false
      },
      "minItems": 1
    },
    "derivation_description": {
      "type": "string"
    },
    "derived_from_datastream_ids": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/objectId"
      },
      "minItems": 1
    },
    "description": {
      "type": "string"
    },
    "enabled": {
      "type": "boolean"
    },
    "external_refs": {
      "type": "array",
      "items": {
        "type": "object",
        "minItems": 1,
        "properties": {
          "identifier": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": ["identifier"]
      }
    },
    "geo": {
      "type": "object",
      "properties": {
        "coordinates": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 3
        },
        "type": {
          "type": "string",
          "enum": ["Point"]
        }
      },
      "required": ["coordinates", "type"]
    },
    "members": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "organization_id": {
            "$ref": "#/definitions/objectId"
          },
          "person_id": {
            "$ref": "#/definitions/objectId"
          },
          "roles": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1
          }
        },
        "required": ["roles"]
      }
    },
    "name": {
      "type": "string"
    },
    "organization_id": {
      "$ref": "#/definitions/objectId"
    },
    "source": {
      "type": "string"
    },    
    "source_type": {
      "type": "string",
      "enum": ["sensor","service","procedure"]
    },
    "state": {
      "type": "string",
      "enum": ["ready"]
    },
    "station_id": {
      "$ref": "#/definitions/objectId"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "thing_id": {
      "$ref": "#/definitions/objectId"
    },
    "urls": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    }
  },
  "definitions": {
    "objectId": {
      "type": "string",
      "pattern": "^[a-fA-F0-9]{24}$",
      "maxLength": 24
    },
    "isoDate": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}[T][0-9]{2}:[0-9]{2}:[0-9]{2}|.|[0-9]{0,3}Z$"
    }
  },
  "required": ["enabled", "name"],
  "additionalProperties": false
}
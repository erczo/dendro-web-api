{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "_id": {
      "$ref": "#/definitions/objectId"
    },
    "activated_at": {
      "$ref": "#/definitions/isoDate"
    },
    "deactivated_at": {
      "$ref": "#/definitions/isoDate"
    },
    "created_at": {
      "$ref": "#/definitions/isoDate"
    },
    "updated_at": {
      "$ref": "#/definitions/isoDate"
    },
    "enabled": {
      "type": "boolean"
    },
    "external_refs": {
      "type": "array",
      "items": {
        "type": "object",
        "minItems": 1,
        "properties": {
          "identifier": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": ["identifier"]
      }
    },
    "full_name": {
      "type": "string"
    },
    "geo": {
      "type": "object",
      "properties": {
        "coordinates": {
          "type": "array",
          "minItems": 2,
          "maxItems": 3,
          "items": {
            "type": "number"
          }
        },
        "type": {
          "type": "string",
          "enum": ["Point"]
        }
      },
      "required": ["coordinates", "type"]
    },
    "is_active": {
      "type": "boolean"
    },
    "is_stationary": {
      "type": "boolean"
    },
    "media": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "sizes": {
            "type": "object",
            "properties": {
              "large": {
                "$ref": "#/definitions/mediaSize"
              },
              "medium": {
                "$ref": "#/definitions/mediaSize"
              },
              "medium_2x": {
                "$ref": "#/definitions/mediaSize"
              },
              "small": {
                "$ref": "#/definitions/mediaSize"
              },
              "small_2x": {
                "$ref": "#/definitions/mediaSize"
              },
              "thumb": {
                "$ref": "#/definitions/mediaSize"
              },
              "thumb_2x": {
                "$ref": "#/definitions/mediaSize"
              }
            },
            "required": ["large", "medium", "small", "thumb"]
          },
          "type": {
            "type": "string",
            "enum": ["photo"]
          },
          "caption": {
            "type": "string"
          }
        },
        "required": ["sizes", "type"]
      }
    },
    "members": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "organization_id": {
            "$ref": "#/definitions/objectId"
          },
          "person_id": {
            "$ref": "#/definitions/objectId"
          },
          "roles": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1
          }
        },
        "required": ["roles"]
      }
    },
    "name": {
      "type": "string"
    },
    "place_id": {
      "$ref": "#/definitions/objectId"
    },
    "organization_id": {
      "$ref": "#/definitions/objectId"
    },
    "slug": {
      "$ref": "#/definitions/slugId"
    },
    "station_type": {
      "type": "string",
      "enum": ["weather","research"]
    },
    "time_zone": {
      "type": "string"
    },
    "thing_ids": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/objectId"
      }
    },
    "utc_offset": {
      "type": "number"
    },
    "external_links": {
      "type": "array",
      "items": {
        "type": "object",
        "minItems": 1,
        "properties": {
          "title": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": ["title", "url"]
      }
    }
  },
  "definitions": {
    "objectId": {
      "type": "string",
      "pattern": "^[a-fA-F0-9]{24}$",
      "maxLength": 24
    },
    "isoDate": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}[T][0-9]{2}:[0-9]{2}:[0-9]{2}|.|[0-9]{0,3}Z$"
    },
    "mediaSize": {
      "type": "object",
      "properties": {
        "h": {
          "type": "number"
        },
        "w": {
          "type": "number"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "slugId": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    }
  },
  "required": ["enabled", "is_active", "is_stationary", "name", "station_type", "time_zone", "utc_offset"],
  "additionalProperties": false
}